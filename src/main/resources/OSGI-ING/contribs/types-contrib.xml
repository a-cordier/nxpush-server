<?xml version="1.0"?>

<component name="fr.univlille2.ecm.custom.types" version="1.0">

	<require>org.nuxeo.ecm.platform.types</require>
	<require>org.nuxeo.ecm.core.CoreExtensions</require>

	<!-- identifiant du répertoire utilisé côté copieur pour le routage du document
	Un document dont le nom est préfixé par cet identifiant sera routé vers ce répertoire -->
	<extension target="org.nuxeo.ecm.core.schema.TypeService"
		point="schema">
		<schema override="false" name="ul2Demat" prefix="scan"
			src="schemas/ul2-demat.xsd" />
	</extension>

	<extension target="org.nuxeo.ecm.core.schema.TypeService"
		point="doctype">
		<facet name="Folderish">
			<schema name="ul2Demat" />
		</facet>
	</extension>
	
</component>
